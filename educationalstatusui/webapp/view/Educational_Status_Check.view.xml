<mvc:View controllerName="com.lt.educationalstatusui.controller.Educational_Status_Check"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    

    <content>
        <VBox class="sapUiSmallMargin">

            <!-- Header 1 Section -->
            <Panel headerText="Header 1" backgroundDesign="Solid" class="sapUiMediumMarginBottom">
                <VBox>
                    <!-- Filters -->
                    <HBox class="sapUiSmallMarginBottom" alignItems="Center" justifyContent="Start">
                        <Label text="Search By PSID" labelFor="psidInput"/>
                        <Input id="psidInput" width="150px" class="sapUiTinyMarginBegin"/>
                        <Button text="Go" type="Emphasized" press="onSearchPSID" class="sapUiTinyMarginBegin"/>
                        <Label text="Status Change To" class="sapUiTinyMarginBegin"/>
                        <Select id="statusSelect" width="150px" class="sapUiTinyMarginBegin">
                            <items>
                                <core:Item key="InitialDraft" text="Initial Draft"/>
                                <core:Item key="PendingApproval" text="Pending Approval"/>
                                <core:Item key="Draft" text="Draft"/>
                            </items>
                        </Select>
                    </HBox>

                    <!-- Table -->
                    <Table id="psidTable" inset="false" width="100%">
                        <headerToolbar>
                            <Toolbar>
                                <Title text="PSID Details" level="H4"/>
                            </Toolbar>
                        </headerToolbar>
                        <columns>
                            <Column><Text text="Column 1"/></Column>
                            <Column><Text text="Column 2"/></Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="11111111111"/>
                                    <Text text="22222222222"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </Panel>

            <!-- Header 2 Section -->
            <Panel headerText="Header 2" backgroundDesign="Solid" class="sapUiMediumMarginBottom">
                <VBox>
                    <!-- Filters -->
                    <HBox class="sapUiSmallMarginBottom" alignItems="Center" justifyContent="Start">
                        <Label text="Search By ICHR" labelFor="ichrInput"/>
                        <Input id="ichrInput" width="150px" class="sapUiTinyMarginBegin"/>
                        <Button text="Search" type="Emphasized" press="onSearchICHR" class="sapUiTinyMarginBegin"/>
                        <Button text="Change ICHR" press="onChangeICHR" class="sapUiTinyMarginBegin"/>
                    </HBox>

                    <!-- Table -->
                    <Table id="ichrTable" inset="false" width="100%">
                        <headerToolbar>
                            <Toolbar>
                                <Title text="ICHR Details" level="H4"/>
                            </Toolbar>
                        </headerToolbar>
                        <columns>
                            <Column><Text text="Column 1"/></Column>
                            <Column><Text text="Column 2"/></Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="33333333333"/>
                                    <Text text="4444444444444"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </Panel>

        </VBox>
    </content>

    </Page>
</mvc:View>